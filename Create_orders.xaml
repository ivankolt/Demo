<Window x:Class="Demo.Create_orders"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:Demo"
         mc:Ignorable="d"
         FontFamily="Comic Sans MS"
        Title="ИС &quot;МММ&quot; - Оформление заявки" Height="450" Width="800" MinHeight="400" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="70" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Оформление заявки"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Grid/>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="70" Width="100" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,5,0,5" >
            <Button Content="Назад" Height="30" FontSize="15" Background="#FF76E383" Click="Button_Click_8"/>
            <Grid/>
        </StackPanel>
        <Grid Height="360" VerticalAlignment="Bottom">
            <GroupBox Header="Оформление заявки" Foreground="#FF498C51">

                <Grid Height="360" VerticalAlignment="Bottom">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="350">
                    <StackPanel Orientation="Vertical" Margin="0,8,0,0">

                        <StackPanel>
                            <TextBlock Text="Тип продажи"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" Foreground="#FF498C51" Margin="0,30,0,10"></TextBlock>
                            <ComboBox Name="ComboBoxTypeOrders" SelectionChanged="ComboBoxTypeOrders_SelectionChanged"></ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center"/>
                        <TextBlock Text="Выберите товары"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" Foreground="#FF498C51" Margin="0,10,0,0"/>

                        <Grid Height="180" VerticalAlignment="Top">
                            <DataGrid
        Name="DataProducts"
        
        AutoGenerateColumns="False"
        RowBackground="White"
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto"
        ItemsSource="{Binding vibor}">
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn Header="Выбрать" Binding="{Binding CheckProducts}" />
                                    <DataGridTextColumn IsReadOnly="True" Header="Товар" Binding="{Binding NAME}" Foreground="#FF498C51"/>
                                        <DataGridTextColumn IsReadOnly="True"  Header="Поставщик" Binding="{Binding SUPPLIER}" Foreground="#FF498C51"/>
                                        <DataGridTemplateColumn Header="Количество">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding QTY}" Foreground="#FF498C51" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <TextBox Text="{Binding QTY, UpdateSourceTrigger=PropertyChanged}" 
                                                     PreviewTextInput="NumberValidationTextBox" 
                                                     />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <StackPanel Name="comboBoxPredOplata" Orientation="Vertical">
                            <TextBlock Text="Размер предоплаты товары"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" Foreground="#FF498C51" Margin="0,10,0,0"/>
                            <ComboBox Name="ComboBoxPredOplata1">
                                    <ComboBoxItem>
                                        <TextBlock>50%</TextBlock>
                                    </ComboBoxItem>
                                    <ComboBoxItem>
                                        <TextBlock>100%</TextBlock>
                                    </ComboBoxItem>
                                </ComboBox>
                        </StackPanel>
                        
                        <Button Height="23" Width="665" Content="Создать заявку"  Background="#FF76E383" Margin="0,11,0,0" Click="Button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                    </StackPanel>
    </ScrollViewer>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>

