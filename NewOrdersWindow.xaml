<Window x:Class="Demo.NewOrdersWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:Demo"
         mc:Ignorable="d"
         FontFamily="Comic Sans MS"
        Title="ИС &quot;МММ&quot; - Оформление заявки" Height="450" Width="800" MinHeight="400" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="70" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Оформление заявки"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <Grid/>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="70" Width="100" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,5,0,5" >
            <Button Content="Назад" Height="30" FontSize="15" Background="#FF76E383" Click="Button_Click_8"/>
            <Grid/>
        </StackPanel>
        <Grid Height="360" VerticalAlignment="Bottom">
            <GroupBox Header="Выбор клиента" Foreground="#FF498C51">
                <Grid Height="360" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400*"/>
                        <ColumnDefinition Width="400*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Выберите клиента" Margin="0,20,0,0"/>
                        <ComboBox x:Name="CustomersComboBox" Margin="0,10,10,0"/>
                        <Button Height="20" Width="367" Content="Выбрать"  Background="#FF76E383" Margin="0,11,0,0" Click="Button_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Созадние клиента"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
                        <TextBox x:Name="LastName" Margin="10,10,0,0" Height="25" Text="Фамилия"></TextBox>
                        <TextBox x:Name="FirstName" Margin="10,10,0,0" Height="25" Text="Имя"></TextBox>
                        <TextBox x:Name="MiddleName" Margin="10,10,0,0" Height="25" Text="Отчество"></TextBox>
                        <DatePicker Name="Birth" Margin="10,10,0,0"></DatePicker>
                        <TextBox x:Name="Login" Margin="10,10,0,0" Height="25" Text="Логин"></TextBox>
                        <TextBox x:Name="Password" Margin="10,10,0,0" Height="25" Text="Пароль"></TextBox>
                        <Button Height="20" Width="367" Content="Создать"  Background="#FF76E383" Margin="0,11,0,0" Click="Button_Click_1"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
