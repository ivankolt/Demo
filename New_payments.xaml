<Window x:Class="Demo.New_payments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="Comic Sans MS"
        Title="ИС &quot;МММ&quot; - Оформление счета" Height="450" Width="800" MinHeight="400" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="130" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Оформление счета"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Foreground="#FF498C51"/>
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock Text="Выберите заявку (по присвоенному номеру)"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Foreground="#FF498C51"/>
                <ComboBox Name="ComboPaymetns" Margin="20,10,20,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="70" Width="100" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,5,0,5">
            <Button Content="Назад" Height="30" FontSize="15" Background="#FF76E383" Click="Button_Click_8"/>
        </StackPanel>
        <Grid Height="294" VerticalAlignment="Top" Margin="0,130,0,0">
            <GroupBox Header="Оформление счета" Foreground="#FF498C51" >
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="270">
                    <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Номер заявки (создан автоматически)"  HorizontalAlignment="Left" FontSize="15" Foreground="#FF498C51" />
                            <TextBox Name="IdText" Height="25"/>
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="ФИО клиента (заполнено автоматически)"  HorizontalAlignment="Left" FontSize="15" Foreground="#FF498C51"/>
                            <TextBox Name="UsersText" Height="25"/>
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Дата заявки (заполнено автоматически)"  HorizontalAlignment="Left" FontSize="15" Foreground="#FF498C51"/>
                            <DatePicker Name="Date" Height="25"/>
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Дата оформления счета"  HorizontalAlignment="Left" FontSize="15" Foreground="#FF498C51"/>
                            <DatePicker Name="DateOfromlenia" Height="25"/>
                        </StackPanel>
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Text="Сумма к оплате"  HorizontalAlignment="Left" FontSize="15" Foreground="#FF498C51"/>
                            <TextBox Name="AmountTotal" Height="25"/>
                        </StackPanel>
                        <Button Height="23" Width="665" Content="Сформировать счёт"  Background="#FF76E383" Margin="0,11,0,0" Click="Button_Click" HorizontalAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
