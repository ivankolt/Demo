    <Window x:Class="Demo.MainWindow_Users"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:Demo"
     mc:Ignorable="d"
     FontFamily="Comic Sans MS"
    Title="ИС &quot;МММ&quot; - Аутентификация" Height="350" Width="400" MinHeight="400" MinWidth="400" WindowStartupLocation="CenterScreen">

        <Grid>
            <Grid Margin="10,10,0,10" Panel.ZIndex="0" >
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Создание заказа" Height="30" FontWeight="Bold" FontSize="15"></TextBlock>
                    <TextBlock Text="Тип покупки:"></TextBlock>
                    <ComboBox Width="200" Name="Products_Status" HorizontalAlignment="Left" Margin="0,5,0,0" SelectionChanged="ComboBox_SelectionChanged"></ComboBox>
                    <TextBlock Text="Выберите товар доя добавления:"  Height="30" Margin="0,5,0,0" ></TextBlock>
                    <ComboBox Width="200" Name="ComboBoxProducts" HorizontalAlignment="Left" Margin="0,0,0,0"></ComboBox>
                    <Button Height="23"  Content="Добавить в список"  Background="#FF76E383" Width="130" HorizontalAlignment="Left" Margin="0,5,0,0" Click="Button_Click_2"/>
                    <TextBlock Text="Выбранные товары:"  Height="30" Margin="0,5,0,0" ></TextBlock>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="140">
                        <StackPanel x:Name="ProductsStackPanel" Orientation="Vertical">
                        
                        </StackPanel>
                    </ScrollViewer>
                    <Button Height="23"  Content="Сохраниить"  Background="#FF76E383" Width="130" HorizontalAlignment="Left" Margin="0,5,0,0" Click="Button_Click_2"/>
                </StackPanel>
            </Grid>
            <Grid Panel.ZIndex="10" d:IsHidden="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Grid.Row="0">
                    <GroupBox Height="35" Width="330" BorderBrush="Black" BorderThickness="1" Padding="0" Margin="0,6,0,0" >
                        <Grid Height="32" Width="310" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <!-- Для ФИО -->
                                <ColumnDefinition Width="Auto" />
                                <!-- Для кнопки -->
                            </Grid.ColumnDefinitions>

                            <TextBlock Name="NameUsers"
                           Grid.Column="0"
                           Text=""
                           FontSize="15"
                           Margin="8,0,0,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Foreground="#232c2d"
                           FontWeight="Bold"/>

                            <Button Content="Выйти"
                        Grid.Column="1"
                        Height="24"
                        Width="80"
                        Background="Red"
                        Foreground="White"
                        Margin="0,8,0,4"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Click="Button_Click"
                        FontWeight="Bold"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>


                <StackPanel Orientation="Vertical" Grid.Row="1">
                    <TextBlock Text="ИС &quot;МММ&quot;" HorizontalAlignment="Center" FontSize="30"/>
                    <TextBlock Text="Главная страница" HorizontalAlignment="Center" FontSize="30" Margin="0,10,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="2" Margin="10,0,10,0">
                    <Button Height="23"  Content="Создать заявку"  Background="#FF76E383"  HorizontalAlignment="Center" Width="130" Click="Button_Click_1"/>
                    <Separator Height="10" Foreground="White" Background="White"></Separator>
                    <StackPanel Name="StackPanelHello" Background="#FFAAFFA2" OpacityMask="White">
                        <TextBlock Name="TextHello" Width="300" TextWrapping="Wrap">
                        </TextBlock>
                    </StackPanel>

                    <TextBlock Text="Список заказов:" HorizontalAlignment="Center">
                    </TextBlock>
                    <StackPanel Orientation="Vertical">
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Grid>
    </Window>
    
