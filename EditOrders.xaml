<Window x:Class="Demo.EditOrders"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:Demo"
         mc:Ignorable="d"
         FontFamily="Comic Sans MS"
        Title="ИС &quot;МММ&quot; - Управлние статусами заявок" Height="450" Width="800" MinHeight="400" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="70" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Управлние статусами заявок"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Выберите клиента:  "  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
                <ComboBox Name="AllCustomers" Height="25" Width="200"></ComboBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="30" Width="100" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,5,0,5" >
            <Button Content="Назад" Height="30" FontSize="15" Background="#FF76E383" Click="Button_Click_8"/>
            <Grid/>
        </StackPanel>
        <Grid Height="350" VerticalAlignment="Bottom">
            <Grid Height="350" VerticalAlignment="Top">
                <DataGrid
        Name="DataProducts"
        
        AutoGenerateColumns="False"
        RowBackground="White"
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto"
        ItemsSource="{Binding vibor}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Номер заявки" Binding="{Binding NumberOrdersId}" />
                        <DataGridTextColumn IsReadOnly="True" Header="Дата заявки" Binding="{Binding NAME}" Foreground="#FF498C51"/>
                        <DataGridTextColumn IsReadOnly="True"  Header="Фио клиента" Binding="{Binding SUPPLIER}" Foreground="#FF498C51"/>
                        <DataGridTextColumn IsReadOnly="True"  Header="Оплата" Binding="{Binding PAYMETNS}" Foreground="#FF498C51"/>
                        <DataGridTextColumn 
                                    Header="Статус" 
                                    Binding="{Binding STATUS}" 
                                    IsReadOnly="True"
                                    Foreground="#FF498C51"/>

                            <DataGridTemplateColumn Header="Дейсвие">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Дальше" Foreground="#FF498C51" Margin="0,0,5,0" Click="Button_Click_1"/>
                                        <Button Content="Отмена" Foreground="#FF498C51" Click="Button_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>

