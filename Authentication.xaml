<Window x:Class="Demo.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:Demo"
 mc:Ignorable="d"
 FontFamily="Comic Sans MS"
Title="ИС &quot;МММ&quot; - Аутентификация" Height="350" Width="400" MinHeight="400" MinWidth="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="ИС &quot;МММ&quot;" HorizontalAlignment="Center" FontSize="30"/>
            <Button Content="Button" Width="68" Height="6" BorderBrush="White" Background="White" Click="Button_Click_1"/>
            <TextBlock Text="Аутенитификация" HorizontalAlignment="Center" FontSize="30" Margin="0,30,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10,0,10,0">
            <Separator Height="20" Foreground="White" Background="White"></Separator>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="* " Foreground="Red" FontSize="15"></TextBlock>
                <TextBlock Text="Логин" FontSize="15"></TextBlock>
            </StackPanel>
            <Separator Height="10" Foreground="White" Background="White"></Separator>
            <TextBox x:Name="Login" FontSize="15" Margin="20,0,20,0"></TextBox>
            <Separator Height="20" Foreground="White" Background="White"></Separator>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock Text="* " Foreground="Red" FontSize="15"></TextBlock>
                <TextBlock Text="Пароль" FontSize="15"></TextBlock>
            </StackPanel>
            <TextBox x:Name="Password" FontSize="15" Margin="20,0,20,0"></TextBox>
            <Separator Height="20" Foreground="White" Background="White"></Separator>
            <Button Height="23"  Content="Войти"  Background="#FF76E383" Margin="0,11,0,0" Click="Button_Click" HorizontalAlignment="Center" Width="130"/>
        </StackPanel>

    </Grid>
</Window>
