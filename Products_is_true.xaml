<Window x:Class="Demo.Products_is_true"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        FontFamily="Comic Sans MS"
       Title="ИС &quot;МММ&quot; : Товары в наличии" Height="450" Width="800" MinHeight="400" MinWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Height="70" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800">
            <TextBlock Text="Товары в наличии"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" FontFamily="Comic Sans MS" Foreground="#FF498C51"></TextBlock>
            <StackPanel Orientation="Horizontal">

                <TextBox x:Name="TextBoxSeatch" Height="25" Width="596" Margin="20,10,0,0" Text="Нечеткий поиск" FontSize="15" AutomationProperties.HelpText="Нечеткий поиск" GotFocus="TextBoxSeatch_GotFocus" LostFocus="TextBoxSeatch_LostFocus" />
                <Grid>
                    <Button Name="ButtonSeatch" Width="35" Height="33" Foreground="#FFF11515" Click="ButtonSeatch_Click_1" >
                        <Button.Background>
                            <ImageBrush ImageSource="/icons8-поиск-50.png"/>
                        </Button.Background>
                    </Button>
                    <Button Name="ButtonExit" Width="35" Height="33" Foreground="#FFF11515" Click="ButtonExit_Click" >
                        <Button.Background>
                            <ImageBrush ImageSource="/icons8-крестик-78.png"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
        <StackPanel Height="70" Width="100" VerticalAlignment="Top" Orientation="Vertical" HorizontalAlignment="Right" Margin="0,5,0,5" >
            <Button Content="Назад" Height="30" FontSize="15" Background="#FF76E383" Click="Button_Click_8"/>
            <Grid>
                <Button x:Name="CloseButton" Content="Закрыть" Height="30" FontSize="15" Margin="0,5,0,0" Background="#FF76E383" Click="Button_Click_9"/>
                <Button x:Name="OpenButtton"  Content="Создать" Height="30" FontSize="15" Margin="0,5,0,0" Background="#FF76E383" Click="Button_Click_10"/>
            </Grid>
        </StackPanel>
        <Grid Height="340" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400*"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="0" IsReadOnly="True" Name="DataProducts" AutoGenerateColumns="False" MouseDoubleClick="DataProducts_MouseDoubleClick" SelectionChanged="DataProducts_SelectionChanged" Cursor="AppStarting" RowBackground="White">
                <DataGrid.CacheMode>
                    <BitmapCache/>
                </DataGrid.CacheMode>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название продукта" Binding="{Binding NAME}" Foreground="#FF498C51">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Артикл" Binding="{Binding ARTICULE}" Foreground="#FF498C51"></DataGridTextColumn>
                    <DataGridTextColumn Header="Цена товара" Binding="{Binding PRICE_PRODUCTS}" Foreground="#FF498C51"></DataGridTextColumn>
                    <DataGridTextColumn Header="Цена доставки" Binding="{Binding PRICE_SHIPPING}" Foreground="#FF498C51"></DataGridTextColumn>
                    <DataGridTextColumn Header="Статус товара" Binding="{Binding STATUS}" Foreground="#FF498C51"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <GroupBox x:Name="GroupBoxAddProducts" Grid.Column ="1" Header="Добавление/редактирование товара" Foreground="#FF498C51">
                <Grid>
                    <StackPanel  x:Name="AddProducts" Margin="0,39,10,10" >
                        <Button Height="20" Width="50" Content="Назад" HorizontalAlignment="Left" Click="Button_Click_7" Background="#FF49E383"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                            <StackPanel>
                                <TextBlock Text="Название продукта" Margin="0,20,0,0"/>
                                <TextBox x:Name="NameProducts" Height="25" Margin="0,10,0,0"/>
                                <TextBlock Text="Категория продукта" Margin="0,10,0,0"/>
                                <ComboBox x:Name="CategoryProducts" Margin="0,10,0,0"/>
                                <TextBlock Text="Артикул продукта" Margin="0,20,0,0"/>
                                <TextBox x:Name="ArticleProducts" Height="25" Margin="0,10,0,0"/>
                                <TextBlock Text="Цена продукта" Margin="0,20,0,0"/>
                                <TextBox x:Name="PriceProducts" Height="25" Margin="0,10,0,0"/>
                                <TextBlock Text="Статус доставки" Margin="0,10,0,0"/>
                                <ComboBox x:Name="StatusProducts" Margin="0,10,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                        <Button Height="20" Width="200" Content="Добавить" Margin="0,20,0,0" Click="Button_Click_5" Background="#FF76E383"/>
                    </StackPanel>

                    <StackPanel x:Name="EditDeleteStackPanel" Height="240" VerticalAlignment="Center" HorizontalAlignment="Center" Width="388" d:IsHidden="True" >
                        <Button Height="20" Width="50" Content="Назад" HorizontalAlignment="Left" Margin="4,0,0,0" Click="Button_Click_2" Background="#FF76E383"></Button>
                        <StackPanel  Orientation="Horizontal" Margin="0,20,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Button Width="100"  Height="20" Content="Редактировать" Margin="0,0,20,0" Click="Button_Click" Background="#FF76E383"></Button>
                            <Button Width="100"  Height="20" Content="Удалить" Click="Button_Click_3" Background="#FF76E383"></Button>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel  x:Name="AddStackPanel" Height="200" d:IsHidden="True">
                        <Button Content="Добавить товар" Click="Button_Click_6" Background="#FF76E383"/>
                    </StackPanel>


                    <StackPanel  x:Name="EditStackPanel" Margin="0,39,0,28" d:IsHidden="True" >
                        <Button Height="20" Width="50" Content="Назад" HorizontalAlignment="Left" Click="Button_Click_1" Background="#FF76E383"/>
                        <TextBlock   Text="Товар" Margin="0,20,0,0"/>
                        <ComboBox x:Name="EditNameProduct" Margin="0,10,0,0" Background="White" BorderBrush="White">
                        
                        </ComboBox>
                        <TextBlock Text="Поставщик" Margin="0,10,0,0"/>
                        <ComboBox x:Name="EditSuppliersProducts" Margin="0,10,0,0" Background="Black" BorderBrush="White"/>
                        <TextBlock Text="Цена доставки" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBox Width="300" Height="25" x:Name="EditPriceProducts"/>
                            <ScrollBar Height="25" ValueChanged="ScrollBar_ValueChanged" Minimum="-10000" Maximum="10000" SmallChange="1" RenderTransformOrigin="0.5,0.5">
                                <ScrollBar.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="180"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ScrollBar.RenderTransform>
                            </ScrollBar>
                        </StackPanel>
                        <Button Height="20" Width="200" Content="Сохранить" Margin="0,20,0,0" Click="Button_Click_4" Background="#FF76E383"></Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
